//sets executor to slurm
executor.name = "slurm"
//controls job names
executor.jobName = {"$task.process"}
executor.queueSize=5
process {
    scratch = true
    //options to provide for all processes submitted as cluster jobs (e.g. "--account xx")
    clusterOptions = ""
    //resource requirements for processes
    withLabel: "tiny" {
        cpus = 4 
        memory = 8.GB
    }
    withLabel: "small" {
        cpus = 8
        memory = 16.GB
    }
    withLabel: "medium" {
        cpus = 8
        memory = 32.GB
    }
    withLabel: "large" {
        cpus = 8
        memory = 64.GB
    }
    time = 2.hours
    //if not labeled, uses the below settings
    cpus = 8
    memory = 16.GB
}